@{
  Layout = null;
  var action = ((string)ViewContext.RouteData.Values["Action"]).ToLower();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="~/Images/favicon.png" />
    <!--[if IE]>
        <link rel="shortcut icon" href="~/Images/favicon.ico" type="image/vnd.microsoft.icon" />
    <![endif]-->
    <meta name="keywords" value="@ViewBag.Keywords" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/themes/simple/style.css")" />
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.10.0/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="@Url.Content("~/Scripts/tagcloud.js")"></script>
    <script src="@Url.Content("~/Scripts/app.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.fullscreenBackground.js")"></script>
        <!--[if lt IE 9]>
        <script type="text/javascript" src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <script type="text/javascript">
        $(document).ready(function () {
            $("#background-image").fullscreenBackground();
        });
    </script>
</head>
<body>
    <div id="main">
            <div id="header">
                <div id="logo">
                    <div id="logo_text">
                        <h1><a href="/">Create<span class="logo_colour">Excitement</span></a></h1>
                        <h2>A microsoft technical evangelist...</h2>
                    </div>
                </div>
                <div id="menubar">
                    <ul id="menu">
                        <li class="@(action == "posts" ? "selected" : "")">@Html.ActionLink("Posts", "Posts", "Blog")</li>
                        <li class="@(action == "contact" ? "selected" : "")">@Html.ActionLink("Contact", "Contact", "Blog")</li>
                        <li class="@(action == "aboutme" ? "selected" : "")">@Html.ActionLink("About Me", "Aboutme", "Blog")</li>
                    </ul>
                </div>
            </div>
            <div id="site_content">
                @Html.Partial("_Search")
                @RenderBody()
                @Html.Action("Sidebars", "Blog")
            </div>
            <div id="footer">
                @DateTime.Now.Year <strong>Frank van der Geld</strong>, Create Excitement
            </div>
        </div>
    <div id="background-image">
    <img src="~/Images/cityscape.jpg" alt="" width="2800" height="1600" />
</div>
</body>
</html>
